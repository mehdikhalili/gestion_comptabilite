<form method="post" action="{{ path('bank_account_delete', {'id': bank_account.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer ce compte bancaire ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bank_account.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
