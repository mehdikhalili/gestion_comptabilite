{% extends 'base.html.twig' %}

{% block title %}Transaction #{{ transaction.id }}{% endblock %}

{% block body %}
    <h1>Transaction #{{ transaction.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Tireur</th>
                <td>{{ transaction.tireur }}</td>
            </tr>
            <tr>
                <th>ModeDePaiement</th>
                <td>{{ transaction.modeDePaiement }}</td>
            </tr>
            <tr>
                <th>Cheque</th>
                <td>{{ transaction.cheque }}</td>
            </tr>
            <tr>
                <th>Rib</th>
                <td>{{ transaction.rib }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ include('partials/_generateLibelle.html.twig', {'libelle': transaction.libelle}) }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ transaction.note }}</td>
            </tr>
            <tr>
                <th>Debit</th>
                <td>{{ transaction.debit }}</td>
            </tr>
            <tr>
                <th>Credit</th>
                <td>{{ transaction.credit }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ transaction.updatedAt ? transaction.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index') }}">back to list</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
